<UserControl x:Class="Management_Book.UserControls.MasterDataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Management_Book.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Canvas>
        <TextBlock Text="Category" FontSize="20" Canvas.Left="50" Canvas.Top="30" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <ComboBox Name="ComboBoxCategory" SelectionChanged="ComboBoxCategory_SelectionChanged" 
                  SelectedValue="0"
                  Width="200" Height="30" Canvas.Left="145" Canvas.Top="25" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ListView Name="ListViewProduct" Width="700" Height="300" Canvas.Left="50" Canvas.Top="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock Text="{Binding Name}" Foreground="Red" FontSize="18"/>
                        <TextBlock Text=" - " FontSize="18"/>
                        <TextBlock Text="{Binding Price}" FontSize="18"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Canvas.Left="280" Canvas.Top="389">
            <Button x:Name="firstButton" Width="40" Height="35" Content="&lt;&lt;" Click="firstButton_Click"/>
            <Button x:Name="previousButton" Width="40" Height="35" Content="&lt;" Click="previousButton_Click"/>
            <TextBlock Name="currentPagingTextBlock" Width="80" Text="1/1" TextAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="nextButton" Width="40" Height="35" Content="&gt;" Click="nextButton_Click"/>
            <Button x:Name="lastButton" Width="40" Height="35" Content="&gt;&gt;" Click="lastButton_Click"/>
        </StackPanel>
    </Canvas>
</UserControl>
