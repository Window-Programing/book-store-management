<UserControl x:Class="Management_Book.UserControls.MasterDataUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Management_Book.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <Canvas>
        <TextBlock Text="Category" FontSize="14" Canvas.Left="19" Canvas.Top="11" HorizontalAlignment="Center" VerticalAlignment="Top" />
        <ComboBox Name="ComboBoxCategory" SelectionChanged="ComboBoxCategory_SelectionChanged"  SelectedValue="0"
                  Width="200" Height="25" Canvas.Left="95" Canvas.Top="10" HorizontalAlignment="Center" VerticalAlignment="Top">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <DataGrid Name="DataGirdProduct" Canvas.Left="20" Canvas.Top="55">
            <DataGrid.Columns >
                
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Canvas.Left="30" Canvas.Top="535" VerticalAlignment="Top">
            <Button x:Name="firstButton" Width="40" Height="35" Content="&lt;&lt;" Click="firstButton_Click"/>
            <Button x:Name="previousButton" Width="40" Height="35" Content="&lt;" Click="previousButton_Click"/>
            <ComboBox x:Name="currentPagingTextBlock" Width="120" SelectedValue="0">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="Page "/>
                            <TextBlock Text="{Binding Page}"/>
                            <TextBlock Text=" / "/>
                            <TextBlock Text="{Binding TotalPages}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="nextButton" Width="40" Height="35" Content="&gt;" Click="nextButton_Click"/>
            <Button x:Name="lastButton" Width="40" Height="35" Content="&gt;&gt;" Click="lastButton_Click"/>
        </StackPanel>
    </Canvas>
</UserControl>
