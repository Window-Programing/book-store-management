<UserControl x:Class="Management_Book.UserControls.PurchaseUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Management_Book.UserControls"
             mc:Ignorable="d" 
             Height="550" Width="950" 
             Loaded="UserControl_Loaded">
    <DockPanel>
        <Border Margin="10" Padding="10" CornerRadius="20" 
                BorderThickness="1" BorderBrush="LightGray" 
                    Background="#F5F5F5">
            <DockPanel DockPanel.Dock="Left"  LastChildFill="True" Width="600">

                <DockPanel DockPanel.Dock="Top" Margin="10,10,10,0" LastChildFill="False">
                    <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                        <TextBlock Text="Category" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" />
                        <ComboBox x:Name="ComboBoxCategory" SelectionChanged="ComboBoxCategory_SelectionChanged"  SelectedValue="0"
                         Width="200" Height="25" Margin="10,0,0,0"
                              HorizontalAlignment="Center" VerticalAlignment="Top">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel DockPanel.Dock="Right" Height="25" Orientation="Horizontal">
                        <TextBlock Text="Search" FontSize="14" Margin="0,0,10,0"/>
                        <TextBox Name="SearchInput" FontSize="14" Width="150" TextChanged="SearchInput_TextChanged"/>
                    </StackPanel>

                </DockPanel>

                <StackPanel DockPanel.Dock="Top" Height="30" Margin="10,10,10,0" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="refreshButton" Click="refreshButton_Click"  Content="refresh" Width="60" Height="25" Margin="0,0,140,0"/>
                    <TextBlock Text="Từ ngày" FontSize="14" Margin="10,5,10,0" />
                    <TextBox x:Name="fromPrice" FontSize="14" Width="80" />
                    <TextBlock Text=" đến" FontSize="14" Margin="10,5,10,0" />
                    <TextBox x:Name="toPrice" FontSize="14" Width="80" />
                    <Button x:Name="filterPrice" Click="filterPrice_Click" Content="Áp dụng" Width="70" Height="30" Margin="10,0,0,0" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                        HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
                    <Button x:Name="firstButton" Width="40" Height="35" Content="&lt;&lt;" Click="firstButton_Click"/>
                    <Button x:Name="previousButton" Width="40" Height="35" Content="&lt;" Click="previousButton_Click"/>
                    <ComboBox x:Name="currentPagingComboBox" Width="120" SelectedValue="0" SelectionChanged="currentPagingComboBox_SelectionChanged" >
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Page "/>
                                    <TextBlock Text="{Binding Page}"/>
                                    <TextBlock Text=" / "/>
                                    <TextBlock Text="{Binding TotalPages}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <Button x:Name="nextButton" Width="40" Height="35" Content="&gt;" Click="nextButton_Click"/>
                    <Button x:Name="lastButton" Width="40" Height="35" Content="&gt;&gt;" Click="lastButton_Click"/>
                </StackPanel>

                <!--<dxg:GridControl Name="grid" DockPanel.Dock="Bottom" AutoGenerateColumns="None" 
                             EnableSmartColumnsGeneration="True" 
                             Width="560" Height="360" Margin="20,20,20,20"
                             HorizontalAlignment="Left" VerticalAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <dxg:GridControl.Columns>
                        <dxg:GridColumn FieldName="Id" Binding="{Binding Id}" Visible="False"/>
                        <dxg:GridColumn FieldName="Tên sản phẩm" Binding="{Binding Name}" Width="200"/>
                        <dxg:GridColumn FieldName="Giá bán" Binding="{Binding Price}"  Width="100"/>
                        <dxg:GridColumn FieldName="Số lượng" Binding="{Binding Quantity}" Width="60"/>
                        <dxg:GridColumn FieldName="Hình ảnh" Binding="{Binding Image}" Width="160"/>
                    </dxg:GridControl.Columns>
                    <dxg:GridControl.View>
                        <dxg:TableView AllowEditing="False"/>
                    </dxg:GridControl.View>
                </dxg:GridControl>-->

                <DataGrid Name="GridData" Margin="0,10,0,0" IsReadOnly="True" AutoGenerateColumns="False">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Date" Binding="{Binding Name}" Width="150" />
                        <DataGridTextColumn Header="Telephone" Binding="{Binding Price}" Width="150" />
                        <DataGridTextColumn Header="Total" Binding="{Binding Cost}" Width="130" />
                        <DataGridTextColumn Header="Status" Binding="{Binding Price}" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Border>
        <Border Margin="10" Padding="5" CornerRadius="20" 
                BorderThickness="1" BorderBrush="LightGray" 
                    Background="CornflowerBlue">
            <DockPanel LastChildFill="False">
                <StackPanel>
                    <TextBlock Text="Chi tiết đơn hàng" TextAlignment="Center" FontSize="25" FontStyle="Italic" Foreground="White"/>
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Margin="10, 5,0,0" Text="Thông tin đơn hàng" TextAlignment="Left" FontSize="15" FontStyle="Italic" Foreground="White"/>
                        <TextBlock Margin="10, 5,0,0" Text="Ngày tạo" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <TextBox Name="TextBox_CreateDate" Text="{Binding ElementName=GridData, Path=SelectedItem.Name, Mode=OneWay}" Margin="10, 5,0,0" 
                                 TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="Black" Width="260"/>
                        <TextBlock Margin="10, 5,0,0" Text="Tổng tiền" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <TextBox Name="TextBox_Total" Text="{Binding ElementName=GridData, Path=SelectedItem.Price, Mode=OneWay}" Margin="10, 5,0,0" 
                                 TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="Black" Width="260"/>
                        <TextBlock Margin="10, 15,0,0" Text="Thông tin khách hàng" TextAlignment="Left" FontSize="15" FontStyle="Italic" Foreground="White"/>
                        <TextBlock Margin="10, 5,0,0" Text="Tên khách hàng" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <TextBox Name="TextBox_Price" Text="{Binding ElementName=GridData, Path=SelectedItem.Price, Mode=OneWay}" Margin="10, 5,0,0" 
                                 TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="Black" Width="260"/>
                        <TextBlock Margin="10, 5,0,0" Text="Địa chỉ" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <TextBox Name="TextBox_Quantity" Text="{Binding ElementName=GridData, Path=SelectedItem.Quantity, Mode=OneWay}" Margin="10, 5,0,0" 
                                 TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="Black" Width="260"/>
                        <TextBlock Margin="10, 5,0,0" Text="Số điện thoại" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <TextBox Name="TextBox_Image" Text="{Binding ElementName=GridData, Path=SelectedItem.Price, Mode=OneWay}" Margin="10, 5,0,0" 
                                 TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="Black" Width="260"/>
                        <TextBlock Margin="10, 5,0,0" Text="Danh sách sản phẩm" TextAlignment="Left" FontSize="12" FontStyle="Normal" Foreground="White"/>
                        <ListView x:Name="ListProduct" Margin="10,5,0,0" SelectionMode="Multiple" Height="130" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

    </DockPanel>
</UserControl>
