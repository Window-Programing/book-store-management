<dx:ThemedWindow
    x:Class="Management_Book.Views.Frm_Regis"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Frm_Regis" Height="800" Width="1280" WindowStartupLocation="CenterScreen"
    >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="regis.png"/>
        </Grid.Background>
        <Grid Margin="138,236,785.6,270.4">
            <TextBox x:Name="TxtUsername" Margin="0,0,0,214" TextWrapping="Wrap" Text="{x:Null}" VerticalContentAlignment="Center" FontSize="18" Width="350" Height="50" VerticalAlignment="Center"/>
            <PasswordBox x:Name="TxtPassword" HorizontalAlignment="Center" Margin="0,106,0,108" Width="350" Height="50" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
            <PasswordBox x:Name="TxtConfirmPassword" HorizontalAlignment="Left" Margin="0,214,0,0" VerticalAlignment="Top" Width="350" Height="50" VerticalContentAlignment="Center"/>

        </Grid>
        <dx:SimpleButton x:Name="OK" Content="OK" HorizontalAlignment="Left" Height="50" Margin="388,555,0,0" VerticalAlignment="Top" Width="100" CornerRadius="5" Click="Btn_OK"/>
        <dx:SimpleButton x:Name="CANCEL" Content="CANCEL" HorizontalAlignment="Left" Height="50" Margin="138,555,0,0" VerticalAlignment="Top" Width="100" CornerRadius="5" Click="Btn_Cancel"/>

    </Grid>
</dx:ThemedWindow>
